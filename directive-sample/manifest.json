{
 "name": "Chrome Packaged App - AngularJS",
 "description": "A sample packaged application for Chrome using AngularJS",
 "version": "1.0",
 "manifest_version": 2,
 "offline_enabled" : true,
 "app": {
  "background": {
    "scripts": [ "background.js" ]
  }
 },
 "permissions": [
   "fileSystem",
   "contextMenus",
   "notifications",
   "videoCapture",
   "tts",
   "idle"
 ]
}